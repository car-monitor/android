<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon"
        />

 <LinearLayout
     android:layout_margin="20dp"

     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秋名山车神"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#f8f8f8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权限:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/info_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通用户"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#f8f8f8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司:"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/info_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东方海外"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#f8f8f8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/info_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆监督部"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#f8f8f8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工号:"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/info_jobNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14331284"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#f8f8f8" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="手机号:"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18818871225"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#f8f8f8" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住址:"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州市大学城"
                    android:textSize="25sp"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>
 </LinearLayout>

    <Button
        android:id="@+id/info_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_login_selector"
        android:text="返回"
        android:textColor="#5c5c5c"
        android:textSize="25sp"
        />

</LinearLayout>