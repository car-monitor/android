<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon" />

    <TableLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="用户名" />

            <TextView
                android:id="@+id/info_username"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="权限" />

            <TextView
                android:id="@+id/info_authority"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="公司" />

            <TextView
                android:id="@+id/info_company"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="部门" />

            <TextView
                android:id="@+id/info_department"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="工号" />

            <TextView
                android:id="@+id/info_jobNo"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="手机号" />

            <TextView
                android:id="@+id/info_phone"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/info_table"
                android:text="住址" />

            <TextView
                android:id="@+id/info_address"
                style="@style/info_table"
                android:text="@string/un_login" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/info_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_login_selector"
        android:text="@string/back"
        android:textColor="#5c5c5c"
        android:textSize="25sp" />

</LinearLayout>