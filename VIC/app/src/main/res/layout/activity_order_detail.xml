<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="30dp"
                android:layout_gravity="center_horizontal"
                android:src= "@mipmap/bill"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="车辆ID:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id= "@+id/car_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="驾驶员ID:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id= "@+id/driver_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="订单ID:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="出发地:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/place_of_departure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="目的地:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="计划开始时间:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="计划完成时间:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="发件人:"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="#f9f1e3"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="姓名:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addressorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="手机:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addressorPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="地址:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addressorAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="收件人:"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="#f9f1e3"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="姓名:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addresseeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="手机:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addresseePhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="地址:"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id= "@+id/addresseeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>